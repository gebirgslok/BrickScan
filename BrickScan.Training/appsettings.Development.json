{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%APPDATA%/BrickScan.Training/Logs/log_debug.txt",
          "outputTemplate": "{Timestamp:G} [{Level:u3}] {Application} {MachineName} {ThreadId} {SourceContext}: {Message}{NewLine:1}{Exception:1}",
          "fileSizeLimitBytes": 52428800, //50 MB
          "retainedFileCountLimit": 3,
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
